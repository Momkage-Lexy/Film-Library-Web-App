@{
    ViewData["Title"] = "RGB";
}

<div class="container rgb">
    <div class="row rgb-row no-gutters">
        <h2 class="rbg-title">Enter an RGB color to see what it looks like!<br><br></h2>
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <!-- form -->
            <form asp-controller="Home" asp-action="RGBColor" method="get" id="rgb-form">
                <label for="R" class="rgbLabel">R:</label>
                <input type="number" id="R" name="red" value="0" min="0" max="255"><br><br>
                <label for="G" class="rgbLabel">G:</label>
                <input type="number" id="G" name="green" value="0" min="0" max="255"><br><br>
                <label for="B" class="rgbLabel">B:</label>
                <input type="number" id="B" name="blue" value="0" min="0" max="255"><br><br>
                <button type="submit">Display</button>
            </form>
        </div>
        <div class="col-md-3 squareDiv">
            <!-- Color Display -->
            <div class="square" style="background-color: @ViewBag.Hex;"></div>
            <p><!-- hex value --> @ViewBag.Hex</p>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>